CREATE TABLE preguntas (
  id mediumint(8) unsigned NOT NULL default '0',
  pregunta text,
  correcta text,
  incorrecta1 text,
  incorrecta2 text,
  incorrecta3 text,
  PRIMARY KEY  (id)
) TYPE=MyISAM;
<? 
session_start();
// conexion db
